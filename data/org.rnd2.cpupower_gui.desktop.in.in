[Desktop Entry]
Version=1.1
Name=cpupower-gui
GenericName=CPU frequency settings
Comment=Sets the frequency limits of the CPU
Exec=@bindir@/cpupower-gui
Icon=@icon@
Terminal=false
Type=Application
StartupNotify=true
Categories=Qt;Settings;HardwareSettings
Keywords=frequency;limits;
Actions=Performance;Balanced;

[Desktop Action Performance]
Name=Switch to Performance profile
Exec=@bindir@/cpupower-gui --performance

[Desktop Action Balanced]
Name=Switch to Balanced profile
Exec=@bindir@/cpupower-gui --balanced
